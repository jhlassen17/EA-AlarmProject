	<?z if (error($serial_ports[$A].ser.stopbits)) { ?>
	   </FONT>
	<?z } ?>
	</TD><TD><SELECT NAME="<?z varname($serial_ports[$A].ser.stopbits) ?>">
	<?z print_select($serial_ports[$A].ser.stopbits) ?>
   </SELECT></TD></TR>
	</TABLE>
<?z } ?>

