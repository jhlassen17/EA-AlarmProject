<html>
	<head>
		<title>Change Passwords</title>
		<style type="text/css">
			body { margin: 0 auto; text-align:center; }
			table { margin: 0 auto; }
		</style>
	</head>
	<body>
		<header>
		<h1 id="status">Change Passwords</h1>
		</header>
		<form id="changeUserInfo" method=POST action="/">
		<table>
			<th>User ID</th>
			<th>User Password</th>
			<tr>
				<td>
					<select name="selectedUser">
						<option value="0">1</option>
						<option value="1">2</option>
						<option value="2">3</option>
						<option value="3">4</option>
					</select>
				</td>
				<td><input type="password" name="selectedPassword" size="10" /></td>
			</tr>
			</table>
			<input type="submit" name="doIt" for="changeUserInfo" value="Change">
		</form>
		<br />
		<a href="/">Go back</a>
	</body>
</html>
